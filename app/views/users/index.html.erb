<!-- app/views/users/index.html.erb -->
<h1>登録されている Users</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to '수정', edit_user_path(user), class: 'action-button' %><br>
          <%= button_to '삭제', user_path(user), method: :delete, class: 'action-button' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
